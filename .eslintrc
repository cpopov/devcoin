{
  "extends": [
    "standard",
    "plugin:promise/recommended"
  ],
  "plugins": [
    "promise"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "jest": true
  },
  "globals": {
    "artifacts": true,
    "assert": true,
    "contract": true,
    "web3": true
  },
  "rules": {
    // Strict mode
    "strict": [
      2,
      "global"
    ],

    // Code style
    "space-before-function-paren": "off"
  }
}
